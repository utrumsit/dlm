import platform

# Joplin Configuration
# Tokens are machine-specific. Get yours from Joplin -> Settings -> Web Clipper
# Map your hostname (output of 'hostname -s') to your token.
JOPLIN_TOKENS = {
    'Your-Hostname': 'YOUR_JOPLIN_TOKEN_HERE',
    # 'Another-Hostname': 'ANOTHER_TOKEN_HERE'
}

HOSTNAME = platform.node().split('.')[0]
JOPLIN_TOKEN = JOPLIN_TOKENS.get(HOSTNAME, '')

# Fallback for safety if hostname matching fails
if not JOPLIN_TOKEN:
    # Use the first available token as a default if available
    if JOPLIN_TOKENS:
        JOPLIN_TOKEN = next(iter(JOPLIN_TOKENS.values()))
    else:
        JOPLIN_TOKEN = ''

